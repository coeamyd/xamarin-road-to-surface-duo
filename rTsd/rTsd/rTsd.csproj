<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="container.html" />
    <None Remove="Resources\Images\blur_background.png" />
    <None Remove="Resources\Images\drwindows_logo.png" />
    <None Remove="Resources\Images\earth.png" />
    <None Remove="Resources\Images\icon_about.png" />
    <None Remove="Resources\Images\icon_blog.png" />
    <None Remove="Resources\Images\logo.jpg" />
    <None Remove="Resources\Images\share.png" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\container.html" />
    <EmbeddedResource Include="Resources\Images\blur_background.png" />
    <EmbeddedResource Include="Resources\Images\drwindows_logo.png" />
    <EmbeddedResource Include="Resources\Images\earth.png" />
    <EmbeddedResource Include="Resources\Images\icon_about.png" />
    <EmbeddedResource Include="Resources\Images\icon_blog.png" />
    <EmbeddedResource Include="Resources\Images\logo.jpg" />
    <EmbeddedResource Include="Resources\Images\share.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.8">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Xamarin.Forms" Version="4.4.0.991265" />  
    <PackageReference Include="Xamarin.Essentials" Version="1.3.1" />  
    <PackageReference Include="Xamarin.Forms.PancakeView" Version="1.3.6" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Controls\PostHeroView.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
  </ItemGroup>
</Project>